mixin button(text,icon)
    if icon 
        button.button(class=attributes.class)=text
            i(class="button-icon material-icons")=icon
    else
        button.button(class=attributes.class)=text



mixin navLink(arr)
    each value in arr
        li.header-nav-list-item
            if value.icon
                a(href="link").header-nav-list-link.expand=value.name 
                    i(class="header-nav-list-link-icon material-icons")= value.icon
            else 
                a(href="link").header-nav-list-link=value.name


mixin footerLink(hrefValue,nameValue)
    a.footer-link(href="hrefValue")=nameValue


mixin footerLists(footerNavItems)
    each value in footerNavItems 
        li.footer.list.item=value